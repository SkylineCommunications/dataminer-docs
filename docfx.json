{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**.csproj"
          ]
        }
      ],
      "dest": "develop/api/types",
      "disableDefaultFilter": false,
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "dataminer-overview/**.md",
          "dataminer-overview/**/toc.yml",
          "user-guide/**.md",
          "user-guide/**/toc.yml",
          "develop/**.md",
          "develop/toc.yml",
		  "develop/**/toc.yml",
		  "develop/api/types/*.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "dataminer-overview/images/**",
          "user-guide/images/**",
          "develop/images/**",
		  "develop/schemadoc/Protocol/images/**",
		  "develop/schemadoc/Automation/images/**"
        ]
      }
    ],
	"overwrite": "overwrite/*.md",
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "DataMiner Docs",
      "_appFooter": "Â© Skyline Communications 2022",
      "_enableSearch": true,
      "_enableNewTab": true
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "templates/slc_template"
    ],
    "postProcessors": [ "ExtractSearchIndex" ],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}
