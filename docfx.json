{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**.csproj",
            "assemblies/**.dll"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "_site/**"
          ]
        }
	  ],
      "dest": "develop/api/types",
      "disableDefaultFilter": false,
      "disableGitFeatures": false,
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "dataminer-overview/**.md",
          "dataminer-overview/**/toc.yml",
          "user-guide/**.md",
          "user-guide/**/toc.yml",
          "release-notes/**.md",
          "release-notes/**/toc.yml",
          "develop/**.md",
          "develop/toc.yml",
		      "develop/**/toc.yml",
		      "develop/api/types/*.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
 	"xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
	"xref" : [ "xref/newtonsoft.yml" ],
  "resource": [
      {
        "files": [
          "images/**",
          "dataminer-overview/images/**",
          "user-guide/images/**",
          "release-notes/images/**",
          "develop/images/**",
		      "develop/schemadoc/Protocol/images/**",
		      "develop/schemadoc/Automation/images/**"
        ]
      }
    ],
  	"overwrite": "overwrite/*.md",
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "DataMiner Docs",
      "_appFooter": "Â© Skyline Communications 2023",
      "_enableSearch": false,
      "_enableNewTab": true
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "memberpage",
      "templates/skyfx"
    ],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}
